<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@android:style/Theme.Holo">
		
	</style>
	
	<style name="InputDecimal">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:lines">1</item>
		<item name="android:inputType">numberDecimal</item>
		<item name="android:digits">0123456789.</item>
		<item name="android:hint">@string/hint_1decimal</item>
		<item name="android:gravity">right</item>
		<item name="android:imeOptions">actionNext</item>
	</style>
	
	<style name="InputDecimal.NoFocus">
		<item name="android:focusable">false</item>
		<item name="android:hint">@string/hint_3decimal</item>
		<item name="android:textColor">@android:color/holo_blue_light</item>
		<item name="android:textColorHint">@android:color/holo_blue_dark</item>
	</style>
	
</resources>
