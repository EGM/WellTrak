<?xml version="1.0" encoding="utf-8"?>
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		
		android:layout_width="fill_parent"
        android:layout_height="fill_parent"
		android:padding="8dp">
	
		<TableRow android:gravity="center">
	
		    <TextView
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
    		    android:text="@string/label_date" />
		
			<EditText
    		    android:layout_width="fill_parent"
    		    android:layout_height="wrap_content"
				android:focusable="false"
				android:textColor="@android:color/holo_blue_light"
				android:id="@+id/edit_date" />
				
		</TableRow>
		
		<TableRow android:gravity="center">
		
			<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/label_meter1" />

			<EditText
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_meter1" />
				
		</TableRow>
		
		<TableRow android:gravity="center">

			<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/label_meter2" />

			<EditText
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_meter2" />

		</TableRow>
		
		<TableRow android:gravity="center">
		
    		<TextView
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
				android:text="@string/label_flow" />

			<EditText
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
				android:focusable="false"
				android:hint="@string/hint_3decimal"
				android:gravity="right"
				android:textColor="@android:color/holo_blue_light"
				android:textColorHint="@android:color/holo_blue_dark"
				android:id="@+id/edit_flow" />
				
		</TableRow>
		
		<TableRow android:gravity="center">
		
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/label_cl2entry" />

			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_cl2entry" />
			
		</TableRow>
		
		<TableRow android:gravity="center">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/label_cl2remote" />

			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_cl2remote" />
			
		</TableRow>
		
		<TableRow android:gravity="center">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/label_phentry" />

			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_phentry" />
			
		</TableRow>
		
		<TableRow android:gravity="center">

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:text="@string/label_phremote" />

			<EditText
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:lines="1"
				android:inputType="numberDecimal"
				android:digits="0123456789."
				android:hint="@string/hint_1decimal"
				android:gravity="right"
				android:id="@+id/edit_phremote" />

		</TableRow>
		
	</TableLayout>
